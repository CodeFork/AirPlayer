<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AirPlayer" Height="350" Width="525">
    <Grid>
        <ListBox x:Name="airPlayDevices" DisplayMemberPath="Name" HorizontalAlignment="Left" Height="309" VerticalAlignment="Top" Width="142" SelectionChanged="airPlayDevices_SelectionChanged"/>
        <StackPanel>
            <Button Width="100" Height="50" Name="btnVideo" Click="btnVideo_Click">Stream Video</Button>
            <Button Width="100" Height="50" Name="btnStopVideo" Click="btnStopVideo_Click">Stop Video</Button>
            <Button  Width="100" Height="50" Name="btnImage" Click="btnImage_Click">Show Image</Button>
            <Button  Width="150" Height="50" Name="btnMkvToMp4" Click="btnMkvToMp4_Click">Convert MKV to MP4</Button>
        </StackPanel>

    </Grid>
</Window>
